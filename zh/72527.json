u8feb\u75c7\u60a3\u8005\u3002\n* \u4ee5\u60b2\u89c2\u4e3b\u4e49\u7b11\u5bf9\u4eba\u751f\u3002\n* ''Are We Cool Yet?''\n\n== \u5979\u5728\u5e72\u5565\uff1f ==\n* \u5728{{ruby|\u6811\u4e0d\u5b50\u4e16\u754c|The World of Remnant}}\u5f53\u4e00\u540d\u730e\u4eba\u5b66\u5458\u3002\n* \u5728[[\u6218\u8230\u5c11\u5973]]\u7684\u4e16\u754c\u91cc\u5f53\u4e00\u540d\u6307\u6325\u5b98\uff0c\u5e76\u4e14\u53ea\u662f\u4e00\u540d\u666e\u666e\u901a\u901a\u7684\u4e2d\u56fd\u5973\u5b50\u9ad8\u4e2d\u751f\u3002\n* \u5728\u5199\u4e00\u4e9b\u7537\u6027\u4eba\u7269\u7f6a\u6076\u4e0b\u6d41\u7684\u540c\u4eba\u6587\uff0c\u5e76\u6210\u4e3a\u4e86\u804c\u4e1a\u9a6c\u8f66\u592b\u3002\n* \u5728\u51c6\u5907\u81ea\u6740\u3002\n* \u4e00\u4f4d\u7eaf\u719f\u7684\u6587\u5316\u6897\u738b\uff0c\u88c5\u903c\u5219\u5fc5\u5b9a\u8981\u7ffb\u8f66\u3002\n* \u7ffb\u8bd1\u3001\u8bb2\u8ff0\uff0c\u4f20\u64ad\u82f1\u6587\u7b11\u8bdd\u3002\n\n== \u91cc\u7a0b\u7891 ==\n* \u6ce8\u518c\uff1a2018 Aug. 9\n* \u7f16\u8f91\u7684\u7b2c\u4e00\u4e2a\u8bcd\u6761\uff1a[[Qrow Branwen]]\n* \u521b\u5efa\u7684\u7b2c\u4e00\u4e2a\u8bcd\u6761\uff1a[[Bad Luck Charm]]\n\n== \u5979\u559c\u6b22\u5565\uff1f ==\n* APH\uff1a\u52a0\u7c73\uff0c\u7c73\u4e2d\u5fc3\u504f\u53f3\u7c73\u3002\u66fe\u7ecf\u5403\u8fc7\u51b7\u6218\u3001\u81ea\u7531\u7ec4\u548c\u5f1f\u7ec4\u3002\u6211\u7231\u745e\u5178\u3002\u4e0d\u5927\u559c\u6b22Dover\u548c\u5473\u97f3\u75f4\u3002\n* SCP\uff1aKonlef\uff0c\u9f7f\u8f6e\u51b0\u3002\n* \u57ce\u5e02\u62df\u4eba\uff1a\u7f8e\u56fd\u897f\u6d77\u5cb8\uff0c\u897f\u96c5\u56fe/\u65e7\u91d1\u5c71\u3002\u4ed6\u4eec\u7684CP tag\u53eb\u7fe1\u7fe0\u96fe\u3002\u4e5f\u5403\u5df4\u9ece/\u6d1b\u6749\u77f6\u3002\u65e5\u9ed1\u5df4\u9ece1/1\u3002\u5927\u90e8\u5206\u5185\u5bb9\u90fd\u5728QQ\u7a7a\u95f4\u3002\n* RWBY\uff1aOzQrow\uff0cSunBlake\u3002\n* Villainous\uff1aBHF\uff0cFlug\u53a8\uff0c\u6709\u539f\u521bAU Cosmical\uff08\u5b87\u5b99\u5954\u9003\uff09\u3002\n* Undertale\uff1aSansby\u3002\n* Voltron\uff1aSheith\uff0cAllurance\uff0cPunk\u3002\n* \u6eda\u5708\uff1a\u4f60\u559c\u6b22\u7684\u6240\u6709\u4e50\u961f\u3002\u6211\u662f\u4f2a\u6447\u3002\n* \u8c37\u7269\u3001\u6d46\u679c\u3001\u5c0f\u866b\u5b50\u548c\u4eba\u7c7b\u98df\u54c1\u3002\u67d4\u8f6f\u7684\u5de2\u548c\u81ea\u5df1\u7684\u98de\u7fbd\u3002\n\n== \u96c0\u8a00\u96c0\u8bed ==\n\u7f8e\u56fd\u6587\u5b66\u662f\u4e16\u754c\u4e0a\u6700\u597d\u7684\u4e1c\u897f\uff0c\u54e5\u4eec\u3002\n<br>\u300a\u74e6\u5c14\u767b\u6e56\uff1a\u7f8e\u56fd\u6587\u5b66\uff0c\u4ece\u5165\u95e8\u5230\u5165\u571f\u300b\u3002\n<br>\u8fd9\u8f66\u518d\u4e0d\u5199\uff0c\u5c31\u6210\u7075\u8f66\u4e86\u3002 \u2014\u2014\u8bc4\u8bba\u300aRWBY\u300b\u4e2d\u7684OzQrow\u65f6\u8bf4\n<br>\u6211\u662f\u5348\u591c\u8f66\u738b\uff01\n<br>\u8fd9\u4e2a\u65f6\u95f4\u4f3c\u4e4e\u5f88\u9002\u5408\u6765\u4e00\u6b21\u70b9\u6897\uff0c\u7136\u540e\u53d1\u8868\u4e00\u4e2a\u51b7\u9177\u800c\u53c8\u7b97\u8ba1\u7684\u5348\u591c\u5feb\u8f66\uff0c\u5e26\u7740\u90aa\u6076\u7684\u5f26\u5916\u4e4b\u97f3\u3002\u4e00\u4e2a\u5173\u4e8eSM\u3001\u5173\u4e8e\u79d1\u5e7b\u3001\u76f8\u7231\u76f8\u6740\u3001\u65af\u5fb7\u54e5\u5c14\u6469\u7684\u5feb\u8f66\uff0c\u4f46\u662f\u8e6d\u70ed\u5ea6\u7684\u65f6\u5019\u624d\u9700\u8981\u53d1\u8f66\uff0c\u73b0\u5728\u9700\u8981\u7684\u662f\u6b63\u5267\u3002 \n\n== \u72e1\u96c0\u4e09\u5de2 ==\nLofter\uff1a[http://limbosparrow.lofter.com/ \u9ebb\u96c0\u7684\u4e13\u5c5e\u5730\u72f1]\n\n}}\n\n\n== \u6c64\u59c6\u900a\u51b2\u950b\u67aa ==\n{{Cquote|\u8def\u5fb7\u7ef4\u5e0c\u628a\u88c5\u5c0f\u63d0\u7434\u7684\u6728\u7bb1\u653e\u5728\u5de6\u811a\u524d\u4e09\u82f1\u5bf8\uff0c\u4e00\u4e2a\u5f88\u4f18\u96c5\u3001\u5f88\u9ad8\u50b2\uff0c\u5f88\u4e0d\u5b89\u7684\u8ddd\u79bb\u3002\u4ed6\u6253\u5f00\u7684\u7bb1\u76d6\u4e0d\u4f1a\u78b0\u5230\u5c0f\u817f\uff0c\u5370\u6709\u6469\u6839\u5934\u50cf\u7684\u786c\u5e01\u5374\u80fd\u5728\u7bb1\u76d6\u5185\u886c\u7ea2\u8272\u4e1d\u7ed2\u4e00\u78b0\uff0c\u6eda\u843d\u8fdb\u7f6e\u653e\u7434\u8eab\u7684\u51f9\u69fd\u3002\u800c\u5047\u5982\u6709\u4eba\u5bfb\u8845\u6ecb\u4e8b\uff0c\u4ed6\u5728\u4e94\u5341\u79d2\u5185\u5c06\u7434\u5f13\u63d2\u5165\u5927\u8863\u6df1\u6df1\u7684\u8863\u888b\uff0c\u6000\u62b1\u63d0\u7434\uff0c\u8fc5\u901f\u6293\u8d77\u7434\u7bb1\uff0c\u5c31\u6b64\u9003\u79bb\u534e\u76db\u987f\u5e7f\u573a\u3001\u9003\u79bb\u5317\u6ee9\u3002\u6000\u62b1\u6ee1\u6ee1\u4e00\u6367\u843d\u9b44\u4f4e\u8d31\u7684\u65f6\u4ee3\u54c0\u6101\uff0c\u6000\u62b1\u6210\u5343\u4e0a\u767e\u6bb5\u4f18\u79c0\u7684\u66f2\u8c03\uff0c\u7a7f\u8fc7\u9ece\u660e\u65f6\u5206\u7684\u9ed1\u4eba\u8857\u5df7\uff0c\u7a7f\u8fc7\u4e00\u7fa4\u7fa4\u60ac\u6d6e\u5728\u70ed\u5c9b\u6548\u5e94\u91cc\u7684\u5927\u7a7a\u60f3\u5bb6\u3002\n\n\u6765\u5723\u5f17\u6717\u897f\u65af\u79d1\u7684\u4e00\u6708\u91cc\uff0c\u4ed6\u8bd5\u7740\u63a9\u85cf\u81ea\u5df1\u8f7b\u5fae\u4e00\u70b9\u3001\u50f5\u786c\u7684\u8d35\u65cf\u53e3\u97f3\u3002\u4e00\u70b9\u70b9\u6c14\u6d41\u5728\u4e0a\u989a\u7684\u505c\u7559\u6469\u64e6\uff0c\u4e00\u70b9\u70b9\u8fc7\u5206\u7075\u6d3b\u800c\u4e0d\u6cb9\u6ed1\u7684\u5377\u820c\uff0c\u4e00\u70b9\u70b9\u820c\u4fa7\u62b5\u4f4f\u81fc\u9f7f\uff0c\u4e00\u70b9\u70b9\u7c97\u7cd9\u7684\u7802\u783e\u8d28\u611f\u3001\u8fc7\u5206\u7684\u6c14\u58f0\u3002\u4ed6\u8fd8\u6ca1\u5b66\u4f1a\u7f8e\u5f0f\u8bf4\u6cd5\u65f6\u4fdd\u7559\u7684\u53ef\u6068\u7684\u8bda\u5b9e\u3002\u8fd9\u4e00\u5207\u3002\u4ed6\u8d70\u8def\u65f6\u80a9\u8180\u7565\u5fae\u8038\u8d77\u3001\u5927\u8de8\u6b65\u8d70\u8fc7\u8857\u5df7\u65f6\u7d27\u8e59\u7684\u7709\uff0c\u7709\u5cf0\u6bd4\u53d1\u8272\u6de1\u4e09\u5206\uff1b\u63a5\u7740\u662f\u4ed6\u633a\u76f4\u7684\u80cc\uff0c\u4ed6\u7c89\u7ea2\u51bb\u5f97\u53d1\u767d\u7684\u624b\u6307\uff0c\u4ed6\u6de1\u6de1\u84dd\u8272\u53cc\u7738\u3001\u773c\u5149\u950b\u9510\u575a\u97e7\uff1b\u4ed6\u5bf9\u8fd9\u5ea7\u57ce\u5e02\u8fc7\u5ea6\u72c2\u70ed\u7684\u4e86\u89e3\uff0c\u4ed6\u7a7f\u7684\u7070\u8272\u6cd5\u5170\u7ed2\u957f\u98ce\u8863\u3002\u6240\u6709\u8fd9\u4e00\u5207\u90fd\u53ef\u80fd\u62db\u81f4\u553e\u9a82\u4e0e\u6028\u6068\u3002\n\n\u4f46\u5c0f\u63d0\u7434\u6216\u8bb8\u662f\u4e2a\u4f8b\u5916\uff0c\u4ed6\u4fa5\u5e78\u7740\u60f3\u3002\n\n\u4e8c\u5341\u5c81\u7537\u5b69\u5728\u4ed6\u9009\u5b9a\u7684\u843d\u811a\u70b9\u653e\u4e0b\u7434\u7bb1\uff0c\u5c06\u8584\u8584\u4e00\u5c42\u677e\u9999\u62b9\u5728\u7434\u5f13\u9a6c\u5c3e\u4e0a\u3002\u4ed6\u6b64\u523b\u7ad9\u5728\u4e00\u5bb6\u5496\u5561\u5e97\u524d\uff0c\u5e74\u8f7b\u810a\u6881\u633a\u76f4\u5982\u5fb7\u56fd\u6934\u6811\uff1b\u53ea\u662f\u4ed6\u7684\u7ea4\u7ef4\u3001\u4ed6\u7684\u6811\u679d\uff0c\u4e0d\u4e3a\u4efb\u4f55\u5bd2\u51b7\u6216\u72c2\u98ce\u6240\u52a8\u3002\u5192\u7740\u540d\u8d35\u6728\u7434\u53d7\u6f6e\u7684\u6781\u5927\u98ce\u9669\uff0c\u6413\u70ed\u88ab\u51b7\u98ce\u7ec6\u96e8\u51b0\u5c01\u7684\u6839\u6839\u624b\u6307\uff0c\u7a33\u4f4f\u8eab\u5f62\uff0c\u63d0\u7434\u8d1f\u4e0a\u7565\u4f4e\u7684\u80a9\u5934\uff0c\u5f00\u59cb\u62c9\u594f\u3002\u677e\u9999\u7c89\u672b\u98de\u51fa\uff0c\u6e85\u5230\u4ed6\u5e74\u8f7b\u3001\u7d27\u7ef7\u7626\u524a\u7684\u9762\u5b54\uff0c\u98a7\u9aa8\u4e0b\u988c\u4e4b\u95f4\u4e00\u5757\u5e73\u6ed1\u65e0\u8840\u8272\u7684\u988a\u3002\u7434\u5f13\u538b\u4e0a\u5f26\uff0c\u7434\u9a6c\u8c0b\u5212\u51fa\u4f4e\u6c89\u6291\u90c1\u7684\u6d41\u7545\u5f26\u4e50\uff0c\u4e00\u66f2\u65e7\u6b27\u6d32\u4e0e\u65b0\u5927\u9646\u5408\u594f\u4e2d\u63a5\u7eed\u7684\u6ed1\u97f3\u3002\u9152\u5427\u91cc\u7684\u94a2\u7434\u6f14\u594f\u8005\u8e29\u4e0b\u4e2d\u95f4\u8e0f\u677f\uff0c\u63a5\u7740\u6362\u5230\u5de6\u811a\uff0c\u4ee5\u4fbf\u8ba9\u63d0\u7434\u624b\u62c9\u51fa\u4e00\u4e2a\u5f3a\u70c8\u9ad8\u4ea2\u4e9b\u7684\u97f3\u3001\u5360\u636e\u4e3b\u52a8\u6743\u3002\n\n\u4ed6\u4eec\u8fd9\u662f\u5728\u5408\u594f\u2014\u2014\u5c3d\u7ba1\u53cc\u65b9\u76f8\u9694\u7ea6\u6709\u5341\u51e0\u7c73\u3002\u6bcf\u5f53\u6b64\u65f6\uff0c\u963f\u5c14\u5f17\u96f7\u5fb7\u603b\u4f1a\u9732\u51fa\u4f1a\u5fc3\u7684\u5fae\u7b11\uff0c\u5c06\u80cc\u633a\u5f97\u76f4\u4e9b\uff0c\u624b\u6307\u6e38\u79fb\u7684\u52a8\u4f5c\u6108\u52a0\u6e29\u67d4\u3002\n\n\u5c0f\u63d0\u7434\u60b2\u6006\u4f4e\u5a49\u5982\u8bc9\u8bf4\uff0c\u4e0e\u94a2\u7434\u7684\u6b22\u5feb\u5408\u4e3a\u4e00\u4f53\u3002\u6765\u81ea\u65b0\u5965\u5c14\u826f\u7684\u827a\u672f\u4f5c\u54c1\u4f3c\u4e4e\u603b\u5e26\u53cc\u5411\u6027\u3002\u4ed6\u6c89\u9ed8\u7684\u5916\u8868\u4e4b\u4e0b\u8ff8\u51fa\u7684\u60b2\u6006\u4e0e\u751f\u547d\u7684\u6fc0\u60c5\uff0c\u4ed6\u6301\u5f13\u7684\u59ff\u52bf\uff0c\u624b\u8155\u5fae\u5fae\u98a4\u52a8\u7684\u6a21\u6837\uff0c\u5750\u5728\u5ba4\u5185\u7684\u6f14\u594f\u8005\u4e0d\u4e00\u5b9a\u61c2\uff0c\u7136\u800c\u8def\u5fb7\u7ef4\u5e0c\u4e5f\u4e0d\u4ecb\u610f\uff0c\u4e8e\u4ed6\uff0c\u8fd9\u6d6a\u6f2b\u4e3b\u4e49\u5de7\u5408\uff0c\u5e76\u4e0d\u80fd\u5e94\u7528\u5728\u5efa\u7b51\u5b66\u9886\u57df\u6216\u5ba4\u5185\u8bbe\u8ba1\u4e0a\u3002\u4ed6\u7684\u66f2\u8c03\u4ece\u5f13\u5f26\u6d41\u6dcc\u800c\u51fa\uff0c\u4e00\u4e2a\u5c0f\u9ad8\u6f6e\uff0c\u6b64\u6bb5\u7ed3\u675f\u3002\u542c\u5ba2\u9f13\u638c\uff0c\u4f46\u4e0d\u662f\u4e3a\u4ed6\u3002\n\n\u7136\u800c\u4eca\u5929\uff0c\u5728\u90a3\u4e9b\u638c\u58f0\u4e4b\u4e0a\uff0c\u7684\u786e\u6709\u4ec0\u4e48\u4e1c\u897f\u4e0d\u540c\u3002\n\n\u8fdb\u6765\u5427\u3002\u4ed6\u542c\u5230\u6709\u4eba\u9ad8\u58f0\u8bf4\u3002\n\n\u8fdb\u6765\u5427\u3002\u8d77\u5148\u4ed6\u4ee5\u4e3a\u662f\u5fb7\u8bed\uff0c\u90a3\u97f3\u8c03\u4e0e\u5bb6\u4e61\u7684\u8bed\u8a00\u6781\u5ea6\u76f8\u4f3c\uff0c\u5e26\u70b9\u6709\u610f\u65e0\u610f\u7684\u5377\u820c\u97f3\u3002\u4ed6\u5403\u4e86\u4e00\u60ca\uff0c\u624d\u60f3\u8d77\u90a3\u4e0d\u8fc7\u662f\u6dd8\u91d1\u65f6\u4ee3\u79fb\u6c11\u7684\u5b9d\u85cf\uff0c\u5408\u8d77\u7434\u7bb1\uff0c\u5c06\u88f9\u6ee1\u51ac\u65e5\u8863\u88e4\u7684\u8eaf\u4f53\u642c\u8fd0\u5230\u5c4b\u5185\uff0c\u653e\u4e0b\u6ee1\u80a9\u7684\u897f\u5fb7\u56fd\u5317\u90e8\u96ea\u82b1\uff0c\u5f80\u5faa\u73af\u7cfb\u7edf\u88c5\u5165\u5b8c\u5168\u7f8e\u56fd\u7684\u6c14\u5473\u4e0e\u6e29\u5ea6\u3002\u8def\u5fb7\u7ef4\u5e0c\u5927\u53e3\u547c\u5438\uff0c\u80ba\u53f6\u7fd5\u52a8\uff0c\u6c34\u6c7d\u4e0e\u6d77\u98ce\u6392\u51fa\uff0c\u4ed6\u7684\u8eaf\u4f53\uff08\u9178\u75db\u7684\u80a9\u3001\u8df3\u5f97\u98de\u5feb\u7684\u5fc3\u810f\uff0c\u4e0d\u4e60\u60ef\u5730\u4e2d\u6d77\u6c14\u5019\u7684\u660f\u660f\u6b32\u7761\u7684\u5934\u8111\uff0c\u88ab\u96fe\u6c14\u6a21\u7cca\u7684\u89c6\u91ce\uff09\u91cd\u65b0\u5f00\u59cb\u6d3b\u52a8\u3001\u91cd\u65b0\u6e05\u6670\u2014\u2014\u73b0\u5728\u8def\u5fb7\u7ef4\u5e0c\u00b7\u8d1d\u4ec0\u7c73\u7279\u6709\u673a\u4f1a\u597d\u597d\u6253\u91cf\u8bf4\u8bdd\u4eba\u4e86\u3002\n\n\u4ed6\u628a\u76ee\u5149\u4ece\u7434\u76d2\u7684\u91d1\u5c5e\u6263\u79fb\u5f00\uff0c\u9e70\u4e00\u6837\u51b7\u6c89\u7684\u773c\u775b\u626b\u8fc7\u963f\u5c14\u5f17\u96f7\u5fb7\u7684\u9762\u5b54\uff0c\u610f\u8bc6\u5230\u4ed6\u4eec\u4e0d\u662f\u7b2c\u4e00\u6b21\u89c1\u9762\u3002\n\n\u6bd4\u7b2c\u4e00\u6b21\u89c1\u9762\u8981\u6df1\u523b\u591a\u4e86\u3002\n\n\u94a2\u7434\u8fb9\u7684\u7537\u4eba\u59ff\u6001\u9ad8\u8d35\u5c0a\u8363\uff0c\u4e0e\u730e\u8c79\u522b\u65e0\u4e8c\u81f4\uff1a\u624b\u6307\u968f\u610f\u6401\u5728\u7434\u952e\u4e0a\uff0c\u4e00\u53cc\u5b8c\u5168\u9002\u5408\u94a2\u7434\u7684\u624b\uff0c\u4e0d\u6234\u624b\u5957\uff0c\u6d51\u8eab\u653e\u51fa\u732b\u79d1\u52a8\u7269\u7279\u6709\u7684\u4fb5\u7565\u6027\uff0c\u77ed\u53d1\u5448\u73b0\u95ea\u4eae\u91d1\u68d5\u8272\uff0c\u968f\u610f\u68b3\u7406\uff0c\u4e0e\u4ed6\u6240\u89c1\u95fb\u7684\u5176\u4ed6\u6df1\u80a4\u8272\u7235\u58eb\u94a2\u7434\u6f14\u594f\u5bb6\u5927\u76f8\u5f84\u5ead\uff1b\u7136\u800c\u8fd9\u5176\u4e2d\uff0c\u5982\u540c\u4ed6\u6df1\u4fe1\u7684\uff0c\u5fc5\u7136\u5b58\u5728\u67d0\u79cd\u8054\u7cfb\uff0c\u4f7f\u5f97\u8fd9\u5177\u5e74\u8f7b\u8eaf\u4f53\u5c55\u73b0\u51fa\u4e0e\u6240\u6709\u7235\u58eb\u4e50\u6f14\u594f\u5bb6\u76f8\u4eff\u7684\u610f\u6c14\u98ce\u53d1\u3001\u6175\u61d2\u4e0e\u6b22\u5feb\u3002\u4ed6\u98a7\u9aa8\u4e0e\u9762\u988a\u7684\u7ebf\u6761\u6216\u8bb8\u8fc7\u4e8e\u5706\u6da6\u7a1a\u6c14\uff0c\u53c8\u53ef\u80fd\u90a3\u8eab\u767d\u897f\u670d\u4e0d\u886c\u4ed6\u9009\u7684\u7ea2\u8272\u5bbd\u9886\u5e26\uff0c\u65e0\u8bba\u5982\u4f55\uff0c\u8fd9\u4e9b\u7f3a\u70b9\u662f\u4e3a\u4e86\u51f8\u663e\u90a3\u53cc\u773c\u775b\u2014\u2014\u4e00\u53cc\u548c\u8def\u5fb7\u7ef4\u5e0c\u76f8\u4eff\uff0c\u540c\u6837\u7b03\u5b9a\u3001\u6c89\u7740\uff0c\u51b7\u9759\uff0c\u84dd\u8272\u7684\u773c\u2014\u2014\u5fae\u7b11\u7740\u3001\u63a2\u8be2\u7740\u3002\n\n\u201c\u4f60\u62c9\u7434\u62c9\u5f97\u4e0d\u9519\uff01\u201d\n\n\u8def\u5fb7\u7ef4\u5e0c\u54bd\u4e86\u54bd\uff0c\u5589\u7ed3\u6eda\u52a8\uff0c\u5bb3\u6015\u5931\u53bb\u4f2a\u88c5\u7684\u6e38\u5203\u6709\u4f59\uff1a\u201c\u60a8\u4e5f\u662f\u3002\u201d\n\n\u201c\u54c8\uff0c\u201d\u4ed6\u7b11\u4e86\uff0c\u201c\u5c0f\u63d0\u7434\u662f\u4e00\u79cd\u5f88\u5fb7\u56fd\u7684\u4e50\u5668\u554a\uff0c\u6211\u7956\u7236\u2026\u2026\u4ed6\u66fe\u7ecf\u662f\u5df4\u4f10\u5229\u4e9a\u4eba\uff0c\u5bb6\u6559\u826f\u597d\uff0c\u7ecf\u5e38\u62c9\u7434\u3002\u4f60\u8ba9\u6211\u60f3\u5230\u4e86\u4ed6\u3002\u201d\n\n\u201c\u6211\u7684\u8363\u5e78\u3002\u201d\u4ed6\u63a7\u5236\u4e0d\u4f4f\u5730\u5c06\u820c\u5934\u5411\u4e0a\u7ffb\uff0c\u4e0d\uff0c\u5f97\u8d76\u7d27\u6536\u56de\u6765\u3002\n\n\u201c\u6211\u542c\u4f60\u62c9\u5c0f\u63d0\u7434\u5df2\u7ecf\u534a\u4e2a\u6708\u4e86\u3002\u201d\u963f\u5c14\u5f17\u96f7\u5fb7\u628a\u624b\u60ac\u7a7a\u653e\u5728\u7434\u952e\u4e0a\uff0c\u4ecd\u7136\u5728\u5f39\uff0c\u624b\u6307\u5728\u7a7a\u6c14\u4e2d\u6f2b\u4e0d\u7ecf\u5fc3\u5212\u52a8\u3002\u770b\u6765\u6709\u51e0\u5206\u7cbe\u795e\u626d\u66f2\u3002\n\n\u5305\u8c6a\u65af\u7559\u5b66\u751f\u54ac\u4f4f\u4e0b\u5507\uff0c\u9f7f\u8f6e\u5728\u8111\u4e2d\u5494\u5693\u4f5c\u54cd\uff1a\u201c\u6211\u5f88\u62b1\u6b49\u6253\u6270\u4e86\u60a8\u7684\u751f\u610f\u3002\u201d\u4e0d\uff0c\u4e0d\u8981\u5f3a\u8feb\u8981\u6c42\u4ed6\u8d54\u507f\uff0c\u4e0d\u8981\u518d\u6df1\u7a76\u4e0b\u53bb\uff0c\u4e0d\u8981\u518d\u8017\u8d39\u4ed6\u7684\u65f6\u95f4\uff0c\u4e0d\u8981\u5bf9\u4ed6\u90a3\u6837\u6b8b\u5fcd\uff0c\u4e0d\u8981\u8feb\u5bb3\u4ed6\uff0c\u4e0d\u8981\u628a\u7f6a\u540d\u52a0\u8bf8\uff0c\u4ed6\u5df2\u7ecf\u627f\u53d7\u4e86\u4e00\u4e2a\u65f6\u4ee3\u7684\u773c\u6cea\u4e0e\u6218\u706b\u3002\n\n\u963f\u5c14\u5f17\u96f7\u5fb7\u653e\u58f0\u5927\u7b11\uff0c\u597d\u50cf\u4ed6\u90a3\u5177\u9ad8\u8d35\u8089\u4f53\u91cc\u85cf\u53ea\u7b11\u7fe0\u9e1f\u7684\u7075\u9b42\uff0c\u6325\u52a8\u624b\u638c\u6247\u53bb\u4ed6\u4eec\u4e24\u4eba\u4e4b\u95f4\u96ea\u8304\u4e0e\u70df\u8349\u711a\u70e7\u7684\u767d\u8272\u70df\u96fe\uff0c\u5e97\u94fa\u91cc\u7a7a\u6c14\u6e29\u6696\uff0c\u5145\u6ee1\u7cd6\u3001\u975e\u6d32\u5496\u5561\u8c46\u548c\u70df\u96fe\u7684\u6c14\u5473\uff1a\u201c\u4e0d\uff0c\u6211\u60f3\u8bf7\u60a8\u5230\u5e97\u91cc\u6765\uff0c\u4e0e\u6211\u5408\u594f\u3002\u65e7\u91d1\u5c71\u7684\u5341\u4e00\u6708\uff0c\u5916\u9762\u4f1a\u592a\u51b7\u3002\u201d\n\n\u6709\u4e00\u77ac\u95f4\uff0c\u8def\u5fb7\u7ef4\u5e0c\u4ee5\u4e3a\u81ea\u5df1\u53ea\u662f\u542c\u9519\u4e86\u3002\n\n\u4ed6\u95ee\uff1a\u4ec0\u4e48\uff1f\n\n\u4f46\u4ed6\u5f88\u5feb\u610f\u8bc6\u5230\uff0c\u8fd9\u5c31\u662f\u4ed6\u7b49\u5f85\u7684\u4e00\u523b\u3002\n\n\u4ed6\u7ad9\u5728\u963f\u5c14\u5f17\u96f7\u5fb7\u8eab\u8fb9\uff0c\u65e0\u53ef\u7f6e\u7591\uff0c\u6b64\u523b\u4ee5\u53cc\u8db3\u7ad9\u7acb\u5728\u8fd9\u65b9\u4ed6\u672a\u66fe\u5962\u671b\u8fc7\u7684\u821e\u53f0\u4e0a\u4e86\u3002\u7434\u8eab\u67b6\u4e0a\u57ab\u80a9\uff0c\u5de6\u624b\u6309\u5f26\uff0c\u8f7b\u89e6\u62c9\u51fa\u6cdb\u97f3\uff0c\u4ed6\u6709\u70b9\u7d27\u5f20\uff0c\u8f7b\u8f7b\u547c\u51fa\u53e3\u6d4a\u6c14\uff0c\u5de6\u811a\u5c16\u671d\u94a2\u7434\u5bb6\u7684\u65b9\u5411\uff0c\u53c8\u5f88\u5feb\u3001\u5f88\u8c28\u614e\u5730\u6536\u56de\u3002\u7531\u65e2\u662f\u5e97\u4e3b\u53c8\u662f\u4e50\u624b\u7684\u6f14\u594f\u8005\u5f00\u59cb\uff0c\u5de6\u624b\u6709\u4e00\u6bb5\u548c\u97f3\uff0c\u53f3\u624b\u8d1f\u8d23\u6253\u51fa\u8282\u594f\uff0c\u7d27\u63a5\u6d41\u7545\u5982\u4e1d\u7ef8\u7684\u7434\u58f0\u3002\u6d41\u6dcc\u3001\u8df3\u8dc3\u3002\u4ed6\u4e0d\u7528\u518d\u770b\uff0c\u95ed\u4e0a\u773c\u775b\uff0c\u4fbf\u53ef\u9677\u5165\u6c38\u4e45\u5b89\u5b81\u7684\u9ed1\u6697\u3002\u4ed6\u4e0d\u7528\u518d\u542c\uff0c\u4ed6\u7684\u97f3\u4e50\uff0c\u662f\u4e00\u4e32\u4e32\u901a\u8fc7\u677e\u9999\u3001\u9a6c\u5c3e\u548c\u6307\u8179\u4f20\u5230\u5fc3\u91cc\u7684\u632f\u52a8\uff0c\u662f\u5fc3\u810f\u7684\u58f0\u97f3\uff0c\u662f\u8840\u6d41\u7684\u9707\u52a8\uff08\u5c0f\u63d0\u7434\u4e4b\u6240\u4ee5\u6210\u4e3a\u8fd9\u6837\u7684\u5fb7\u56fd\u4e50\u5668\uff0c\u6b63\u662f\u7531\u4e8e\u5c06\u5b83\u653e\u5728\u80a9\u4e0a\u65f6\u6f14\u594f\u8005\u7684\u5fc3\u8df3\u3001\u8840\u6d41\uff0c\u547c\u5438\u4e0e\u4e00\u70b9\u70b9\u8eab\u4f53\u9707\u98a4\u2014\u2014\u5728\u90a3\u81ea\u5c0a\u3001\u51b7\u6f20\uff0c\u5fe7\u6101\u3001\u7b14\u76f4\u7ad9\u7acb\u5982\u6811\u7684\u8eaf\u4f53\u4e0a\u4ea7\u751f\u53cd\u5dee\uff09\uff0c\u4ed6\u4e0d\u7528\u6570\u62cd\uff0c\u4ed6\u4e0d\u5728\u4e4e\u542c\u4f17\uff0c\u53ea\u6709\u94a2\u7434\u4e0e\u5c0f\u63d0\u7434\u7684\u534f\u5f8b\uff0c\u4e50\u5668\u4e4b\u738b\u4e0e\u4e50\u5668\u4e4b\u540e\u7684\u534f\u5f8b\uff0c\u84dd\u8272\u7684\u534f\u5f8b\uff0c\u4e50\u624b\u8e29\u4e0b\u8e0f\u677f\u65f6\u4f4e\u6c89\u7fd5\u52a8\u7684\u9707\u98a4\uff0c\u5c0f\u63d0\u7434\u624b\u662f\u5982\u4f55\u628a\u5f13\u538b\u5728\u5f26\u4e0a\u3002\u4ed6\u7684\u5fc3\u7075\u98a4\u52a8\u3002\u4e00\u9635\u53cc\u4eba\u821e\u822c\u7f31\u7efb\u72c2\u653e\u7684\u97f3\u8c03\uff0c\u4e00\u5207\u90fd\u7ed3\u675f\u4e86\u3002\n\n\u90a3\u4e00\u523b\u53ea\u6709\u9707\u98a4\uff0c\u53ea\u6709\u5bc2\u9759\uff0c\u4e00\u7247\u548c\u8c10\u3002\n\n\u8def\u5fb7\u7ef4\u5e0c\u7741\u5f00\u773c\u775b\uff0c\u4eba\u4eec\u5168\u5728\u6ce8\u89c6\u4ed6\uff0c\u773a\u671b\u4ed6\u3002\u4ed6\u7684\u8138\u7ea2\u4e86\u3002\u4e0a\u5e1d\u3002\n\n\u963f\u5c14\u5f17\u96f7\u5fb7\u542b\u7740\u5584\u610f\u3001\u5341\u5206\u777f\u667a\u7684\u773c\u775b\u4e5f\u770b\u4ed6\u3002\u8fd9\u662f\u552f\u4e00\u4e00\u79cd\u4f7f\u4ed6\u611f\u89c9\u5b89\u5fc3\u7684\u6ce8\u89c6\u3002\u4ed6\u50cf\u4e2a\u7f8e\u56fd\u4eba\u4e00\u6837\u8038\u80a9\uff0c\u610f\u8bc6\u5230\u80cc\u540e\u6c57\u6e7f\uff0c\u886c\u886b\u9ecf\u4f4f\u808c\u4f53\uff0c\u88ab\u4ed6\u7684\u52a8\u4f5c\u62c9\u626f\uff0c\u4ed6\u7d27\u5f20\u7f9e\u602f\u7684\u8d1f\u9762\u4e2a\u6027\u7adf\u540c\u4ed6\u70ed\u70c8\u7684\u72c2\u60f3\u88ab\u4eba\u6df7\u4e3a\u4e00\u8c08\uff01\u8def\u5fb7\u7ef4\u5e0c\u624b\u8db3\u65e0\u63aa\uff0c\u611f\u5230\u81ea\u5df1\u88ab\u7f9e\u8fb1\u4e86\uff0c\u60f3\u627e\u4e2a\u5f97\u4f53\u65b9\u5f0f\u6e9c\u51fa\u9152\u5427\uff1a\u6700\u597d\u8fd8\u8981\u975e\u5e38\u9690\u79d8\uff0c\u6781\u5ea6\u5b89\u5168\u3002\u7136\u540e\u4ed6\u518d\u4e5f\u4e0d\u60f3\u2014\u2014\u4e0d\uff0c\u4ed6\u4f1a\u60f3\uff0c\u800c\u4e14\u8fd8\u4f1a\u75af\u72c2\u5730\u6e34\u6c42\u2014\u2014\u56de\u5230\u8fd9\u91cc\u3002\n\n\u201c\u505a\u5f97\u5f88\u597d\u3002\u201d\u743c\u65af\u8bf4\u3002\n\n\u201c\u4f60\u660e\u5929\u6765\u4e0a\u73ed\u5417\uff1f\u665a\u516b\u70b9\u6765\u5c31\u53ef\u4ee5\u4e86\u3002\u201d\u4ed6\u53c8\u8865\u4e0a\u4e00\u53e5\u3002\n\n\u8def\u5fb7\u7ef4\u5e0c\u660f\u660f\u6c89\u6c89\u5730\u5728\u8ff7\u832b\u4e2d\u70b9\u5934\u540c\u610f\uff0c\u88ab\u672a\u66fe\u77e5\u6089\u7684\u60c5\u611f\u51b2\u660f\u5934\u8111\u3002\n\n\u95ea\u70c1\u591c\u5149\u4e2d\u5c0f\u63d0\u7434\u642d\u4e0a\u80a9\u5934\uff0c\u4ed6\u624d\u7406\u89e3\u201c\u5168\u77e5\u4e4b\u57ce\u201d\u7684\u542b\u4e49\uff1a\u8fd9\u4e2a\u8eab\u5904\u7f8e\u56fd\u6700\u897f\u90e8\u7684\u57ce\u5e02\uff0c\u8fd9\u4e2a\u65e0\u6570\u4eba\u68a6\u60f3\u7684\u9ec4\u91d1\u4e4b\u57ce\uff0c\u8fd9\u4e2a\u84dd\u8272\u7684\u5fe7\u90c1\u6e2f\u6e7e\uff0c\u572866\u53f7\u516c\u8def\u5c3d\u5934\u7684\u5317\u65b9\u3002\u5b83\u77e5\u9053\u5982\u4f55\u653e\u4eba\u81ea\u7531\uff0c\u90a3\u7b49\u4e8e\u5b83\u77e5\u9053\u4e86\u4e00\u5207\uff1b\u5b83\u77e5\u9053\u7231\u4e0e\u68a6\u60f3\u7684\u79d8\u5bc6\uff0c\u5b83\u77e5\u9053\u8def\u5fb7\u7ef4\u5e0c\u00b7\u8d1d\u4ec0\u7c73\u7279\u6765\u81ea\u5927\u897f\u6d0b\u5f7c\u5cb8\u7684\u5c11\u5e74\u5fe7\u90c1\uff0c\u5b83\u77e5\u9053\u963f\u5c14\u5f17\u96f7\u5fb7\u6709\u7740\u4e00\u4e2a\u72c2\u70ed\u68a6\u60f3\u3002\u5b83\u77e5\u9053\u4e00\u5207\u7f6a\u6076\uff0c\u4e00\u5207\u56f0\u82e6\uff0c\u4e00\u5207\u4ed6\u60f3\u8981\u9003\u79bb\u7684\u547d\u8fd0\u675f\u7f1a\u3002\u800c\u73b0\u5728\uff0c\u5168\u77e5\u4e4b\u57ce\u5c06\u624b\u653e\u5728\u4ed6\u80a9\u4e0a\uff0c\u66ff\u4ed6\u5378\u4e0b\u90a3\u4e9b\u9752\u94dc\u9501\u94fe\u3001\u9ed1\u94c1\u811a\u9563\uff0c\u786b\u78fa\u70d9\u5370\uff0c\u653e\u4ed6\u4ee5\u65b0\u5927\u9646\u7279\u6709\u7684\u81ea\u7531\u3002\n\n\u5728\u8fd9\u91cc\u4ed6\u5b89\u5168\u4e86\uff0c\u611f\u5230\u4e0d\u719f\u6089\u4e0e\u4e0d\u4e60\u60ef\u7684\u5e78\u798f\u3002\u6709\u4eba\u7231\u4ed6\u7684\u624d\u534e\u51fa\u4f17\uff0c\u6709\u4eba\u7231\u4ed6\u7684\u7f9e\u602f\u523b\u677f\uff0c\u6709\u4eba\u7231\u4ed6\u7684\u5916\u89c2\uff0c\u6709\u4eba\u7231\u4ed6\u7684\u5185\u5bdf\u3002\u6bcf\u5f53\u963f\u5c14\u5f17\u96f7\u5fb7\u5728\u6f14\u594f\u7684\u95f4\u9699\u5fae\u7b11\u7740\u5c06\u5934\u4fa7\u8fc7\u6765\u671b\u4ed6\uff0c\u597d\u50cf\u8c79\u5728\u5b88\u671b\u4ed6\u7684\u9886\u5730\uff0c\u8fd9\u4e00\u5207\u90fd\u5982\u6b64\u5206\u660e\u3001\u5982\u6b64\u72c2\u70ed\uff0c\u4e0d\u52a0\u63a9\u9970\u2014\u2014\u8d1d\u4ec0\u7c73\u7279\u504f\u8fc7\u5934\u53bb\uff0c\u523b\u610f\u4e0d\u770b\u4ed6\u7684\u642d\u6863\uff0c\u523b\u610f\u62c9\u5f97\u7a0d\u8bb8\u5feb\u4e9b\uff0c\u523b\u610f\u5c06\u7434\u5f13\u4ece\u5f26\u4e0a\u62ac\u8d77\u51e0\u5206\uff0c\u523b\u610f\u772f\u8d77\u4ed6\u9e70\u4e00\u6837\u6df1\u6c89\u84dd\u8272\u7684\u773c\u775b\uff0c\u5047\u88c5\u8fd9\u6837\u5c31\u80fd\u9003\u79bb\u90a3\u4e2a\u53e4\u8001\u5708\u5957\u3002\u7136\u800c\uff0c\u65e0\u8bba\u5982\u4f55\uff0c\u4e00\u7247\u591c\u8272\u4e0e\u6726\u80e7\u70df\u96fe\u4e2d\uff0c\u963f\u5c14\u5f17\u96f7\u5fb7\u8eab\u7740\u767d\u8272\u897f\u88c5\uff0c\u4eff\u4f5b\u5728\u53d1\u5149\uff0c\u4ed6\u7684\u89c6\u7ebf\u65e0\u6cd5\u79fb\u5f00\uff0c\u4ed6\u6570\u5ea6\u4e0e\u743c\u65af\u906d\u9047\u3002\u800c\u6bcf\u4e00\u6b21\u89c6\u7ebf\u76f8\u9519\uff0c\u90a3\u53cc\u6e29\u548c\u3001\u50b2\u6162\u7136\u800c\u4e5f\u5f88\u70ed\u8bda\u7684\u773c\u775b\u90fd\u8ff8\u5c04\u51fa\u70b9\u70b9\u7684\u5149\u8292\u3002\n\n\u4eff\u4f5b\u8bf1\u6355\u9e1f\u7c7b\u7684\u706f\u5149\u3002\n\n\u5c3d\u7ba1\u4ed6\u53ea\u9700\u8981\u4e00\u4e2a\u5de2\uff0c\u80fd\u7761\u4e0b\u505a\u68a6\u800c\u5df2\u3002\n\n\u662f\u690b\u9e1f\u8fc1\u5f99\u3001\u53bb\u5357\u65b9\u7684\u65f6\u5019\u4e86\uff0c\u5b83\u4eec\u90fd\u5df2\u98de\u4e86\u8d77\u6765\u3002\n\n\u53ef\u5b83\u5728\u6323\u624e\u3002\u6d51\u8eab\u51b0\u51b7\uff0c\u4efb\u7531\u5f3a\u6c14\u6d41\u7a7f\u8fc7\u67d4\u8f6f\u7684\u7ed2\u7fbd\u3001\u6258\u8d77\u7fee\u7fbd\u7684\u5e95\u7aef\u3002\u5b83\u60f3\u8981\u98de\u5f97\u8fdc\u4e00\u4e9b\uff0c\u53ea\u8981\u5230\u8fbe\u65b0\u5927\u9646\uff0c\u6c34\u8349\u4e30\u7f8e\u7684\u533a\u57df\u2014\u2014\u5b50\u5f39\u7a7f\u8fc7\u5b83\u7684\u80f8\u819b\uff0c\u51b7\u9177\u65e0\u60c5\uff0c\u5982\u6b64\u9ad8\u6548\u3002\u5b83\u60f3\u8d77\u81ea\u5df1\u66fe\u7a7f\u68ad\u5728\u679c\u6811\u6797\u91cc\uff0c\u82f9\u679c\u6811\u7f00\u6ee1\u767d\u82b1\u7684\u679d\u53f6\u6572\u6253\u5b83\u7684\u989d\u5934\uff0c\u6a31\u6843\u5f00\u7684\u82b1\u50cf\u4e00\u7c07\u5b9d\u77f3\uff0c\u5b83\u60f3\u8d77\u5357\u8fb9\u7684\u7ba1\u4e50\uff0c\u897f\u6d77\u5cb8\u7684\u94a2\u7434\uff0c\u5f26\u4e50\u5408\u594f\u3002\u7136\u800c\u8840\u5374\u4ece\u80f8\u53e3\u6d12\u4e0b\uff0c\u5b83\u5728\u6323\u624e\uff0c\u5b83\u5760\u843d\u4e8e\u5730\u3002\u2014\u2014\u6bcf\u5e74\u6709\u4e24\u767e\u4e07\u53ea\u690b\u9e1f\u6b7b\u4e8e\u67aa\u6740\u3001\u6b7b\u4e8e\u6355\u9e1f\u706f\uff0c\u6b7b\u4e8e\u7ec6\u7f51\u4e0e\u57ce\u5e02\u7684\u706f\u5149\uff0c\u6b7b\u4e8e\u98de\u673a\u6da1\u8f6e\u3002\n\n\u7136\u800c\u90a3\u662f\u7f6a\u6709\u5e94\u5f97\u3002\n\n\u6469\u63d0\u9ed8\uff0c\u90a3\u662f\u4ed6\u7684\u7f6a\u3002\n\n\u8def\u5fb7\u7ef4\u5e0c\u53eb\u558a\u838e\u58eb\u6bd4\u4e9a\u5267\u4f5c\u4e2d\u4eba\u7269\u7684\u540d\u5b57\uff0c\u731b\u7136\u4ece\u5669\u68a6\u91cc\u60ca\u9192\u2014\u2014\u963f\u5c14\u5f17\u96f7\u5fb7\u5728\u5b88\u7740\u4ed6\uff0c\u5750\u5728\u4e00\u5f20\u5c0f\u6bdb\u7ed2\u6905\u4e0a\uff0c\u624b\u91cc\u6367\u7740\u9ed1\u5496\u5561\u3002\u6c34\u96fe\u4ece\u4ed6\u7c89\u7ea2\u8272\u7684\u9762\u5b54\u8fb9\u63a0\u8fc7\uff0c\u5347\u5230\u5934\u9876\uff0c\u5728\u53f0\u706f\u65c1\u5f62\u6210\u4e00\u5c42\u95ea\u95ea\u53d1\u5149\u7684\u6e29\u67d4\u5149\u6655\u3002\u597d\u50cf\u4e00\u5c42\u5929\u4f7f\u7684\u5149\u73af\u3002\u89c1\u5230\u4ed6\u9192\u4e86\uff0c\u7235\u58eb\u4e50\u624b\u7684\u8138\u4e0a\u7acb\u5373\u6d6e\u73b0\u51fa\u6beb\u4e0d\u63a9\u9970\u7684\u6b23\u559c\uff08\u540e\u6765\u4ed6\u610f\u8bc6\u5230\u4e86\uff0c\u4fbf\u7a98\u8feb\u5730\u5c06\u90a3\u795e\u60c5\u56fa\u5b9a\u56de\u53cb\u597d\u7684\u5fae\u7b11\uff09\uff0c\u5f80\u5496\u5561\u91cc\u52a0\u4e86\u51e0\u52fa\u725b\u5976\uff0c\u5c06\u676f\u5b50\u653e\u5230\u5e8a\u5934\u6cd5\u56fd\u5f0f\u7684\u6df1\u53e3\u8336\u789f\u91cc\uff0c\u53cc\u624b\u7948\u7977\u822c\u4ea4\u53e0\uff0c\u671f\u76fc\u4ed6\u559d\u6389\u70ed\u996e\u3002\n\n\u8d1d\u4ec0\u7c73\u7279\u7528\u624b\u8098\u652f\u8d77\u8eab\u4f53\uff0c\u9760\u7740\u5e8a\u5934\u7684\u7f8a\u76ae\u6bef\u5b50\uff0c\u4ee5\u4e0d\u81ea\u7136\u7684\u59ff\u52bf\u7d27\u63e1\u8336\u676f\uff0c\u5439\u6563\u4e0a\u9762\u98d8\u8d77\u7684\u96fe\u6c14\u3002\u5496\u5561\u4e0d\u5f88\u70eb\uff0c\u6709\u6de1\u6de1\u7684\u751c\u5473\u3002\u4ed6\u7684\u624b\u8155\u53d1\u6296\uff0c\u989d\u5934\u518d\u5ea6\u6e17\u51fa\u7ec6\u5bc6\u6c57\u70b9\uff0c\u6e29\u5ea6\u4e0d\u53ef\u907f\u514d\u5730\u79bb\u5f00\u8eab\u4f53\u3002\u4ed6\u53d1\u73b0\u4ed6\u7684\u886c\u886b\u548c\u957f\u88e4\u5df2\u7ecf\u6362\u8fc7\uff0c\u5e26\u7740\u80a5\u7682\u6c14\u5473\uff0c\u88e4\u811a\u6bd4\u4ed6\u7684\u5c3a\u5bf8\u77ed\u7ea6\u4e00\u540b\u5de6\u53f3\uff0c\u662f\u963f\u5c14\u5f17\u96f7\u5fb7\u7684\u7761\u8863\u3002\u4ed6\u9760\u7740\u5e8a\u5934\uff0c\u77ed\u53d1\u4ece\u9b13\u89d2\u5904\u6563\u5f00\u906e\u4f4f\u773c\u775b\uff1b\u8d1d\u4ec0\u7c73\u7279\u5bb6\u7684\u6b21\u5b50\u8fdc\u671b\u6de1\u84dd\u6668\u5149\u3001\u89c6\u7ebf\u6da3\u6563\uff0c\u5934\u6655\u76ee\u7729\uff0c\u7b2c\u4e00\u6b21\u9732\u51fa\u56f0\u60d1\u3001\u7d27\u5f20\uff0c\u7136\u800c\u6781\u5ea6\u611f\u6fc0\u7684\u795e\u60c5\u3002\n\n\u743c\u65af\u5fae\u7b11\uff0c\u4f38\u624b\u53bb\u62cd\u4ed6\u7684\u80a9\u8180\uff0c\u544a\u8bc9\u4ed6\u90a3\u4ef6\u5927\u8863\u6302\u5728\u95e8\u53e3\u7684\u8863\u5e3d\u67b6\u4e0a\uff0c\u4ed6\u7684\u5c0f\u63d0\u7434\u5c31\u653e\u5728\u5e8a\u8fb9\u3002\n\n\u6211\u53ea\u60f3\u7761\u4e00\u89c9\u3002\u2026\u2026\u6211\u7684\u5934\u597d\u75db\uff0c\u963f\u5c14\u5f17\u96f7\u5fb7\u3002\n\n\u7761\u5427\u3002\u743c\u65af\u4ee5\u60ca\u4eba\u7684\u5904\u7406\u75c5\u4eba\u7684\u8010\u5fc3\u5e94\u7b54\u3002\u4f60\u5b89\u5168\u4e86\u3002\n\n\u8fd9\u4e00\u6b21\uff0c\u963f\u5c14\u5f17\u96f7\u5fb7\u53e3\u9f7f\u6e05\u6670\u3001\u53d1\u97f3\u51c6\u786e\uff0c\u7136\u800c\u4ed6\u542c\u4e0d\u51fa\u6765\u3002\n\n\u66d9\u5149\u4ece\u5730\u5e73\u7ebf\u6e10\u6b21\u5347\u8d77\uff0c\u4e00\u4e1d\u4e1d\u843d\u4e0b\u7684\u91d1\u8272\u4e1d\u7ef8\u5728\u94f6\u7ea2\u5929\u5e55\u4e0a\u6563\u5c04\u51fa\u5e26\u7565\u5fae\u6854\u8272\u7684\u5149\u8f89\u3002\u6708\u4eae\u5728\u5929\u7684\u4e00\u89d2\uff0c\u5341\u5206\u6697\u6de1\uff0c\u7ed9\u8def\u4e0a\u7684\u70b9\u70b9\u9732\u6c34\u9540\u4e00\u5c42\u94f6\u8f89\u3002\u8def\u5fb7\u7ef4\u5e0c\u8d70\u5f97\u604d\u60da\uff0c\u4f3c\u4e4e\u5bf9\u4ed6\u505a\u7684\u51b3\u5b9a\u4ecd\u62b1\u6709\u72b9\u7591\u3001\u96be\u4ee5\u51b3\u65ad\uff0c\u5f97\u9760\u963f\u5c14\u5f17\u96f7\u5fb7\u7262\u7262\u63e1\u4f4f\u4ed6\u7684\u624b\u624d\u80fd\u62b5\u6297\u8fd9\u79cd\u72c2\u559c\u4e0e\u5fe7\u6101\u4ea4\u6742\u7684\u5fc3\u60b8\u3002\u7136\u540e\u592a\u9633\u5347\u8d77\u6765\u4e86\u3002\u662f\u592a\u9633\uff0c\u5728\u4ed6\u4eec\u5411\u4e1c\u884c\u8fdb\u7684\u8def\u4e0a\u8fce\u7740\u4ed6\u4eec\u8d70\u6765\uff0c\u4ece\u7ec6\u957f\u4e00\u4e1d\u6e10\u6e10\u6f14\u53d8\u4e3a\u4e00\u89d2\uff0c\u4e00\u5c0f\u5757\u9c9c\u4eae\u7ea2\u8272\uff0c\u5149\u8292\u6e10\u76db\uff0c\u707c\u4eae\u95ea\u8000\uff0c\u73b0\u5728\u5b8c\u5168\u5347\u8d77\u6765\u4e86\uff0c\u9a71\u6563\u96fe\u57ce\u8ba9\u4eba\u611f\u5230\u5bd2\u51c9\u7684\u591c\u96fe\u3002\n\n\u590f\u65e5\u5c06\u8fd1\uff0c\u6b64\u884c\u4ed6\u9001\u8def\u5fb7\u7ef4\u5e0c\u56de\u5230\u5fb7\u56fd\u2014\u2014\u7531\u4e8e\u542c\u95fb\u653f\u575b\u5df2\u53d8\uff0c\u4ed6\u6267\u610f\u56de\u4e61\u2014\u2014\u5c3d\u7ba1\u7f8e\u56fd\u68a6\u7684\u786e\u6444\u4eba\u5fc3\u9b44\u3002\n\n\u963f\u5c14\u5f17\u96f7\u5fb7\u7ad9\u5728\u6708\u53f0\u4e0a\uff0c\u6df9\u6ca1\u5728\u5f62\u5f62\u8272\u8272\u4eba\u7fa4\u4e2d\uff0c\u5411\u4ed6\u7528\u529b\u6325\u624b\u7684\u77ac\u95f4\uff0c\u8def\u5fb7\u7ef4\u5e0c\u5c06\u989d\u5934\u8d34\u5728\u8f66\u7a97\u73bb\u7483\u4e0a\uff0c\u770b\u7740\u7070\u5c18\u4e0e\u96e8\u6c34\u7559\u4e0b\u7684\u6761\u72b6\u6591\u7eb9\uff0c\u773c\u5149\u81ea\u6a21\u7cca\u5e7d\u7075\u7684\u9762\u5b54\u3001\u6e7f\u6f09\u6f09\u7684\u9ed1\u679d\u6761\u4e0a\u6735\u6735\u82b1\u74e3\u4e2d\u6025\u901f\u63a0\u8fc7\u3002\u4ed6\u770b\u5230\u690b\u9e1f\u63a0\u8fc7\u8f66\u9876\uff0c\u6108\u98de\u6108\u4f4e\uff0c\u7fc5\u8180\u95f4\u88f9\u631f\u7740\u65e7\u5927\u9646\u7684\u51b0\u51b7\u7a7a\u6c14\uff0c\u4ed6\u7684\u773c\u775b\u5ffd\u7136\u6e7f\u6da6\u4e86\uff0c\u4f46\u53ea\u662f\u5f88\u5c0f\u4e00\u70b9\uff0c\u91d1\u8272\u776b\u6bdb\u4e0a\u6302\u7684\u5c0f\u5c0f\u7684\u6c34\u6ef4\uff1b\u4e3a\u4e86\u4e0d\u7ed9\u963f\u5c14\u5f17\u96f7\u5fb7\u770b\u51fa\u6765\uff0c\u4ed6\u5f3a\u5fcd\u7740\u4e0d\u7528\u624b\u80cc\u53bb\u64e6\uff0c\u690b\u9e1f\u4e8e\u662f\u5f88\u5feb\u5728\u6cea\u773c\u6726\u80e7\u4e2d\u6210\u4e86\u4e00\u7247\u95ea\u8000\u53d1\u5149\uff0c\u51e0\u8fd1\u7f8e\u4e3d\u7684\u94c5\u7070\u8272\u6df7\u5408\u7d2b\u8272\u7684\u4e91\u96fe\uff0c\u4e00\u7c92\u5b50\u5f39\uff0c\u5411\u4ed6\u82e6\u96be\u7684\u6b27\u6d32\u5bb6\u4e61\u7684\u65b9\u5411\u98de\u53bb\u4e86\u3002\u8fd9\u9e1f\u7684\u65b9\u5411\u4f3c\u4e4e\u548c\u9686\u9686\u7684\u706b\u8f66\u548c\u5176\u70df\u96fe\u540c\u6837\uff0c\u4f3c\u4e4e\u5c31\u662f\u4e3a\u4e86\u8fc1\u5f99\u5411\u66f4\u51b7\u7684\u4e1c\u5317\u65b9\u800c\u98de\u7684\u3002\u60f3\u5230\u8fd9\u91cc\uff0c\u4ed6\u7684\u6726\u80e7\u7684\u6cea\u773c\uff0c\u5ffd\u7136\u56e0\u4e3a\u5bb6\u4e61\u800c\u7efd\u653e\u51fa\u4e00\u70b9\u6101\u82e6\u53c8\u5e26\u6709\u5bbd\u6170\u7684\u5fae\u7b11\uff1a\u56de\u5bb6\u4e86\u3002\n\n\u963f\u5c14\u5f17\u96f7\u5fb7\u4e5f\u5728\u770b\u90a3\u9e1f\uff0c\u8fd9\u9e1f\u6bd4\u6211\u7ae5\u5e74\u65f6\u597d\u50cf\u53c8\u591a\u4e86\u4e9b\uff0c\u4ed6\u60f3\u3002\n\n\u4ed6\u5fc3\u91cc\u6ca1\u6709\u633d\u7559\u8def\u5fb7\u7ef4\u5e0c\u7684\u610f\u613f\uff1a\u4e0d\u4e45\u7684\u5c06\u6765\uff0c\u4ed6\u5c31\u8981\u53bb\u7ebd\u7ea6\u3002\u8d81\u7740\u7ecf\u6d4e\u5982\u6b64\u7e41\u8363\u800c\u524d\u666f\u5bbd\u5e7f\uff0c\u4ed6\u60f3\u4eb2\u624b\u5efa\u51fa\u81ea\u5df1\u7684\u4e00\u7247\u65b0\u4e16\u754c\u3002\u51b5\u4e14\uff0c\u8fd9\u53ea\u662f\u4eb2\u5bc6\u631a\u53cb\u7684\u77ed\u6682\u5206\u522b\uff0c\u5c06\u6765\u4ed6\u4eec\u603b\u4f1a\u91cd\u805a\u2014\u2014\u603b\u4f1a\u3002\n\n\u8def\u5fb7\u7ef4\u5e0c\u5750\u7684\u706b\u8f66\u5f00\u4e86\uff0c\u5217\u8f66\u957f\u6709\u82cf\u683c\u5170\u53e3\u97f3\uff0c\u9ad8\u558a\u7740\u5750\u597d\u3001\u706b\u8f66\u5c06\u5f00\u52a8\uff0c\u628a\u8f66\u7a97\u5173\u597d\u3002\u743c\u65af\u7528\u624b\u638c\u906e\u6321\u5934\u9876\u7684\u9633\u5149\uff0c\u770b\u7740\u706b\u8f66\u7684\u6f06\u76ae\u5265\u843d\u3001\u4e00\u4e9b\u5fae\u4e0d\u53ef\u5bdf\u7684\u6591\u9a73\uff0c\u5ffd\u7136\u75af\u72c2\u5730\u60f3\u5ff5\u8d77\u4ed6\u6765\uff0c\u773c\u775b\u6e7f\u6fe1\u5f97\u770b\u4e0d\u89c1\u8def\u5fb7\u7ef4\u5e0c\u62d8\u8c28\u7684\u6325\u624b\u9053\u522b\u3002\n\n\u5c3d\u7ba1\u8def\u5fb7\u7ef4\u5e0c\u6ca1\u6709\u8d70\u51fa\u4ed6\u7684\u89c6\u91ce\uff0c\u4ed6\u5728\u60f3\u5ff5\u6cd5\u5170\u7ed2\u5927\u8863\u7684\u89e6\u611f\uff1a\u5341\u5206\u67d4\u8f6f\u3001\u7ed2\u9762\u5149\u6ed1\u53d1\u4eae\uff0c\u5e26\u7740\u4e00\u70b9\u4e45\u7a7f\u7684\u6bdb\u7403\u548c\u7c97\u7cd9\u611f\uff0c\u65e7\u8863\u7269\u7279\u6709\u7684\u677e\u677e\u57ae\u57ae\u3002\u4ed6\u7684\u8eab\u4f53\u548c\u59ff\u52bf\uff1a\u5934\u5728\u62c9\u5c0f\u63d0\u7434\u65f6\u4f18\u96c5\u7684\u7565\u5fae\u503e\u4fa7\uff0c\u8033\u8fb9\u7684\u788e\u53d1\u968f\u7740\u8fd9\u4e2a\u52a8\u4f5c\u5782\u4e0b\u3002\u4ed6\u662f\u5426\u65f6\u800c\u6709\u51e0\u6b21\u6df1\u523b\u51b7\u5cfb\u5730\u76b1\u7709\uff0c\u662f\u5426\u66fe\u7ecf\u5507\u8fb9\u6f3e\u8d77\u6e29\u548c\u7684\u5fae\u7b11\uff0c\u662f\u5426\u5077\u5077\u5c06\u90a3\u5bf9\u6de1\u8272\u3001\u9634\u973e\u91cd\u91cd\u53c8\u5e74\u8f7b\u7684\u773c\u775b\u8f6c\u5411\u4ed6\u3002\u4ed6\u7684\u624b\u6307\u5982\u4f55\u6309\u5f26\uff0c\u662f\u6709\u51e0\u6839\u8840\u7ba1\u7a81\u51fa\uff0c\u8fd8\u662f\u4e00\u5c0f\u5757\u6307\u8327\u65e0\u5fc3\u663e\u9732\u3002\u4ed6\u624b\u81c2\u808c\u8089\u8212\u5f20\u4e0e\u7ef7\u7d27\u7684\u6a21\u6837\uff0c\u811a\u65e0\u610f\u70b9\u5730\u6253\u51fa\u7684\u8282\u62cd\u3002\u4ed6\u7684\u4e94\u5b98\uff1a\u4e0d\u8bf4\u5f88\u786c\u6717\uff0c\u603b\u900f\u51fa\u4e00\u79cd\u8fc7\u5ea6\u654f\u611f\u591a\u7591\u7684\u6c14\u8d28\uff0c\u4e00\u79cd\u5916\u5f3a\u4e2d\u5e72\u7684\u575a\u6bc5\uff0c\u4fdd\u62a4\u81ea\u5df1\u7684\u65b9\u5f0f\u3002\u963f\u5c14\u5f17\u96f7\u5fb7\u4e4b\u6240\u4ee5\u77e5\u9053\u8fd9\u4e9b\uff0c\u662f\u56e0\u4e3a\u4ed6\u66fe\u5728\u65e0\u6570\u4e2a\u65e5\u65e5\u591c\u591c\uff0c\u4ed6\u4eec\u4e00\u8d77\u8d70\u8fc7\u7684\u4e09\u5e74\u91cc\u591a\u5c11\u6b21\u5c06\u8033\u6735\u51d1\u8fd1\u8def\u5fb7\u7ef4\u5e0c\u68a6\u5453\u7684\u5634\u5507\uff0c\u542c\u4ed6\u63d0\u53ca\u54e5\u54e5\u79bb\u53bb\u3001\u59b9\u59b9\u81ea\u6740\uff0c\u7236\u6bcd\u7684\u6b7b\uff0c\u542c\u4ed6\u5728\u68a6\u4e2d\u7528\u4e0d\u5b89\u7684\u8f97\u8f6c\u548c\u4f4e\u543c\u591a\u5c11\u6b21\u91cd\u6f14\u90a3\u4e9b\u60b2\u5267\u3002\u800c\u4ed6\u6700\u540e\u4f1a\u60f3\u8d77\uff0c\u8def\u5fb7\u7ef4\u5e0c\u624b\u638c\u7684\u6e29\u5ea6\uff08\u6709\u4e00\u70b9\u4f4e\uff09\uff0c\u4ed6\u8eab\u4f53\u7684\u89e6\u611f\uff08\u5341\u5206\u67d4\u97e7\uff09\uff0c\u4ed6\u624b\u6307\u5728\u81ea\u5df1\u638c\u5fc3\u65e0\u63aa\u7684\u78e8\u8e6d\uff08\u5df2\u80fd\u8fa8\u8bc6\u51fa\u7434\u5f26\u523b\u4e0b\u7684\u8001\u8327\uff09\u2014\u2014\u4e0a\u5e1d\uff0c\u8def\u5fb7\u7ef4\u5e0c\u66fe\u7ecf\u79bb\u4ed6\u90a3\u4e48\u8fd1\u3002\n\n\u706b\u8f66\u5411\u4e1c\u5317\u65b9\u9686\u9686\u5730\u53bb\u3002\n\n\u4e00\u4e2a\u6708\u4ee5\u540e\uff0c\u963f\u5c14\u5f17\u96f7\u5fb7\u767b\u4e0a\u4e86\u5f00\u53bb\u7ebd\u7ea6\u7684\u706b\u8f66\u3002\n\n\u4ed6\u5728\u7ebd\u7ea6\u7684\u7a84\u5c0f\u623f\u95f4\u91cc\u5750\u4e0b\uff0c\u5c06\u94a2\u7b14\u5934\u6d78\u5165\u84dd\u58a8\u6c34\uff0c\u7247\u523b\u540e\u63d0\u8d77\uff0c\u4ee5\u6781\u5ea6\u70ed\u5ff1\u7684\u5fc3\u6001\uff0c\u5f00\u59cb\u7ed9\u4ed6\u9614\u522b\u7684\u597d\u53cb\u5199\u4fe1\u3002\u7834\u788e\u7684\u7f8e\u56fd\u68a6\u7247\u7247\u6563\u843d\u5728\u5b57\u91cc\u884c\u95f4\u3002\n\n\u201cL.B.\uff0c\u6211\u5f88\u4e45\u6ca1\u6709\u89c1\u4f60\u4e86\u3002\u201d\u4ed6\u5728\u4fe1\u91cc\u5e84\u91cd\u5730\u5199\uff0c\u7528\u4ed6\u5b66\u5f97\u5f88\u719f\u7684\u5fb7\u8bed\u3002\u5176\u95f4\u5939\u6742\u4e9b\u4e0d\u9002\u5b9c\u7684\u53e3\u8bed\u65b9\u8a00\u548c\u522b\u5b57\u3002\u201c\u5e0c\u671b\u4f60\u8fc7\u5f97\u597d\u2026\u2026\u201d\u5c31\u8fd9\u6837\u4ed6\u53ef\u4ee5\u4e00\u76f4\u5199\u4e0a\u51e0\u767e\u5c01\uff0c\u5747\u4ee5\u62d8\u8c28\u7684\u201c\u4f60\u8fd1\u6765\u5982\u4f55\u201d\u5f00\u5934\uff0c\u4ee5\u5e84\u91cd\u7684\u201c\u671b\u4e8b\u4e1a\u6709\u6210\uff0cA.J.\u201d\u7ed3\u5c3e\u3002\u4ed6\u5199\u5230\u7ebd\u7ea6\u4e2d\u9910\u548c\u5723\u5f17\u6717\u897f\u65af\u79d1\u4e0d\u4e00\u6837\uff0c\u8fd9\u91cc\u7684\u5efa\u7b51\u5982\u4f55\uff0c\u7235\u58eb\u4e50\u53c8\u6362\u4e86\u8c03\u5b50\uff0c\u8fd9\u662f\u65b0\u5199\u7684\u5c0f\u63d0\u7434\u7ec3\u4e60\u66f2\u4e91\u4e91\uff0c\u6bb7\u5207\u5730\u671f\u76fc\u56de\u4fe1\uff0c\u671f\u76fc\u4ed6\u5bc4\u6765\u8bbe\u8ba1\u7a3f\u7684\u5c0f\u6837\u3002\n\n\u4f46\u4ed6\u8981\u5931\u671b\u4e86\u3002\n\n\u8def\u5fb7\u7ef4\u5e0c\u4e0d\u518d\u7ed9\u4ed6\u56de\u4fe1\u7684\u90a3\u5929\u4e0b\u5348\uff0c\u4e00\u53ea\u690b\u9e1f\u606c\u4e0d\u77e5\u803b\u5730\u5728\u5916\u9762\u9e23\u53eb\uff1a\u6469\u63d0\u9ed8\u3002\n\n\u4ed6\u75c5\u5012\u4e86\uff0c\u89c9\u5f97\u80f8\u8179\u53d1\u75db\uff0c\u4eff\u4f5b\u662f\u5b50\u5f39\u7a7f\u8fc7\u8eab\u4f53\uff0c\u707c\u70e7\u7740\u808c\u8089\u548c\u5fc3\u810f\u3002\u4ed6\u8fd8\u662f\u7b2c\u4e00\u6b21\u75c5\u5f97\u8981\u8eba\u4e0b\u6765\u624d\u80fd\u7f13\u89e3\u75db\u695a\u3002\u602a\u7684\u662f\u8fd9\u6837\u75db\u6beb\u4e0d\u505c\u606f\u5730\u6301\u7eed\u4e86\u4e00\u4e2a\u5c0f\u65f6\uff0c\u76f4\u5230\u4ed6\u627e\u5230\u81ea\u5df1\u7684\u5e8a\uff0c\u8eba\u4e0b\uff0c\u8737\u7f29\uff0c\u9760\u7740\u5e8a\u5934\u7684\u4e00\u5757\u6728\u677f\u5f00\u59cb\u7ed9\u8def\u5fb7\u7ef4\u5e0c\u5199\u4fe1\u7684\u65f6\u5019\uff0c\u6240\u6709\u75db\u695a\u90fd\u6d88\u5931\u4e86\uff0c\u53ea\u7559\u4e0b\u865a\u8131\u3001\u5634\u5507\u53d1\u767d\uff0c\u51b7\u6c57\u76f4\u6d41\u7684\u75db\u82e6\u7684\u4f59\u70ec\u3002\u963f\u5c14\u5f17\u96f7\u5fb7\u4e00\u65f6\u4e4b\u95f4\u6ca1\u6709\u610f\u8bc6\u5230\u8fd9\u662f\u67d0\u4e2a\u4e0d\u7965\u4e4b\u5146\uff0c\u6491\u8d77\u8eab\u4f53\uff0c\u5f00\u59cb\u4ee5\u60ca\u4eba\u7684\u8010\u5fc3\u5199\u9053\uff1a\u201cL.B.\uff0c\u5e0c\u671b\u4f60\u4f9d\u7136\u8fc7\u5f97\u597d\uff0c\u6211\u4eec\u73b0\u5728\u6b63\u8eab\u5904\u52a8\u8361\u7684\u5c40\u9762\uff0c\u5982\u6b64\u52a8\u8361\u7684\u65f6\u4ee3\uff0c\u6211\u5e0c\u671b\u4f60\u575a\u5982\u78d0\u77f3\u2026\u2026\u201d\u3002\n\n\u53ef\u662f\uff0c\u8def\u5fb7\u7ef4\u5e0c\u50cf\u690b\u9e1f\u90a3\u6837\uff0c\u5728\u4ed6\u63d0\u7b14\u5199\u4fe1\u7684\u540c\u65f6\uff0c\u6000\u62b1\u7740\u90a3\u9897\u8d64\u8bda\u3001\u5929\u771f\uff0c\u53ef\u7231\u53c8\u5fe0\u8d1e\u7684\u5fc3\uff0c\u6000\u62b1\u7740\u4ed6\u6240\u627f\u62c5\u7684\u65f6\u4ee3\u7684\u773c\u6cea\uff0c\u4ece\u4ed6\u8eab\u5904\u7684\u51b0\u51b7\u9ad8\u7a7a\u6025\u901f\u5760\u843d\uff0c\u843d\u5230\u88ab\u6218\u706b\u718f\u9ed1\u7684\u7126\u5473\u7684\u571f\u5730\u4e0a\u3002\n\n\u4eff\u4f5b\u90a3\u662f\u4e00\u4e2a\u591a\u5e74\u6765\u4e00\u8109\u76f8\u627f\u7684\u8bc5\u5492\uff0c\u4ed6\u7684\u80a9\u5934\u6eda\u843d\u8840\u73e0\uff0c\u4ed6\u5728\u5598\u606f\uff0c\u5fc3\u77e5\u81ea\u5df1\u4e0d\u80fd\u7ad9\u7acb\uff0c\u53ef\u5373\u4f7f\u5728\u8fd9\u65f6\uff0c\u4ed6\u6240\u4f2a\u88c5\u7684\u575a\u5f3a\u4f9d\u7136\u6218\u80dc\u4e86\u5bf9\u6b7b\u4ea1\u7684\u6050\u60e7\uff0c\u4ed6\u7684\u773c\u795e\u7a7f\u8fc7\u6240\u6709\u4e4c\u5408\u4e4b\u4f17\uff0c\u843d\u5230\u8fdc\u65b9\u2014\u2014\u90a3\u662f\u897f\u65b9\u3002\u592a\u9633\u6b63\u7f13\u7f13\u6c89\u843d\u3002\n\n\u4ed6\u6447\u6447\u6643\u6643\uff0c\u597d\u50cf\u4e00\u682a\u88ab\u4eba\u780d\u5012\u7684\u6934\u6728\uff0c\u5728\u773c\u7738\u4e0e\u53d1\u8272\u4f9d\u7136\u9c9c\u4eae\u7684\u5239\u90a3\uff0c\u9759\u8c27\u5982\u7761\u3001\u6781\u5bcc\u5c0a\u4e25\u5730\u5012\u4e0b\u3002\n\n\u7830\u3002\u5b50\u5f39\u7a7f\u900f\u4ed6\u7684\u8eab\u4f53\u3002\n\n\u7830\u3002\u4ed6\u6c89\u91cd\u53d1\u767d\u3001\u6d88\u7626\u7684\u8089\u4f53\u67d3\u4e0a\u9c9c\u7ea2\u3002\n\n\u7830\u3002\u4e00\u5207\u90fd\u7ed3\u675f\u4e86\u3002\n\n\u90a3\u662f1934\u5e74\uff0c\u66b4\u4e71\u5e2d\u5377\u5fb7\u56fd\u7684\u7586\u571f\uff0c\u4eba\u4eba\u90fd\u6ca1\u6709\u610f\u8bc6\u5230\uff1a\u6700\u6b8b\u5fcd\u7684\u53d8\u9769\u5df2\u964d\u843d\u5728\u5fb7\u56fd\u571f\u5730\u4e0a\u3002\u6218\u4e89\u5df2\u7ecf\u6253\u54cd\uff0c\u524d\u594f\u6084\u7136\u6765\u4e34\uff0c\u88ab\u5c04\u843d\u7684\u690b\u9e1f\u53ea\u662f\u6240\u5fc5\u8981\u4ed8\u51fa\u7684\u727a\u7272\u54c1\u3002\n\n\u7830\u3002\u963f\u5c14\u5f17\u96f7\u5fb7\u7684\u94a2\u7b14\u500f\u7136\u7838\u843d\u5728\u5730\uff0c\u53d1\u51fa\u7b14\u5c16\u6298\u65ad\u7684\u95f7\u54cd\uff0c\u94b4\u84dd\u58a8\u6c34\u55b7\u6e85\u800c\u51fa\u3002\n\n\u7f8e\u56fd\u68a6\u6b63\u5982\u540c\u690b\u9e1f\u8fc1\u5f99\u7fa4\u9010\u6e10\u7834\u788e\u3002\n\n\u8def\u5fb7\u7ef4\u5e0c\u6773\u65e0\u97f3\u4fe1\u7684\u540c\u65f6\uff0c\u963f\u5c14\u5f17\u96f7\u5fb7\u53d1\u89c9\u81ea\u5df1\u75c5\u5f97\u8d8a\u6765\u8d8a\u5389\u5bb3\u3002\n\n\u4ed6\u8f9e\u53bb\u4e86\u90a3\u4efd\u5de5\u4f5c\uff08\u672c\u6765\u4f63\u91d1\u4e5f\u582a\u79f0\u5fae\u8584\uff0c\u7ecf\u6d4e\u6ce1\u6cab\u5e2d\u5377\u5168\u7f8e\u7684\u7f29\u5f71\u5982\u6b64\uff09\uff0c\u4f46\u5373\u4f7f\u4ed6\u8eba\u5728\u5e8a\u4e0a\uff0c\u5634\u5507\u95f4\u4ecd\u7136\u6ea2\u51fa\u9c9c\u7ea2\u53d1\u9ed1\u7684\u8840\uff0c\u624b\u6307\u65e0\u529b\u3001\u773c\u795e\u65f6\u800c\u6da3\u6563\u98d8\u5ffd\u3001\u8eab\u4e0a\u51b7\u70ed\u4ea4\u66ff\uff0c\u989d\u89d2\u5927\u6c57\u6dcb\u6f13\uff0c\u591c\u91cc\u4ed6\u60ca\u53a5\u9192\u6765\uff0c\u6709\u4e00\u523b\u4f1a\u8bef\u8ba4\u4e3a\u81ea\u5df1\u5df2\u7ecf\u6b7b\u53bb\u3002\u4ed6\u4ecd\u7136\u5199\u4e50\u8c31\uff0c\u4f46\u6293\u4e0d\u7a33\u7b14\u3002\u6e10\u6e10\u6ca1\u6709\u4eba\u6765\u62dc\u8bbf\u4ed6\uff0c\u53ea\u6709\u690b\u9e1f\uff0c\u8fd9\u4e9b\u6bdb\u7ed2\u7ed2\u7684\u51b7\u9177\u5b50\u5f39\uff0c\u5927\u7247\u4e4c\u4e91\u822c\u7684\u95ea\u5149\u7fbd\u6bdb\uff0c\u4e5f\u8bb8\u6709\u65f6\u53eb\u7740\u4ed6\u4eec\u7684\u540d\u5b57\uff0c\u7ed5\u7740\u4ed6\u4eec\u6d3b\u8fc7\u7684\u5730\u65b9\u8f6c\u5708\u98de\u821e\uff0c\u6709\u65f6\u505c\u5728\u4ed6\u7684\u7a3f\u5b50\u4e0a\uff0c\u770b\u4ed6\u5199\u7ed9\u8def\u5fb7\u7ef4\u5e0c\u7684\u66f2\u5b50\u3002\n\n\u90a3\u4e9b\u690b\u9e1f\u7684\u6b4c\u8981\u5230\u6b21\u5e74\u6625\u5929\u624d\u54cd\u8d77\u3002\n\n\u8349\u957f\u83ba\u98de\u65f6\u8282\uff0c\u7ebd\u7ea6\u7684\u90a3\u680b\u623f\u5b50\u6210\u4e86\u7a7a\u5c4b\u3002\n\n\u6b64\u540e\u5927\u7ea6\u8fc7\u51e0\u5e74\uff0c\u7ecf\u6d4e\u8427\u6761\u7ed3\u675f\u4e86\uff0c\u65b0\u623f\u5ba2\u5165\u4f4f\uff0c\u963f\u5c14\u5f17\u96f7\u5fb7\u51c6\u5907\u90ae\u9012\u7684\u4e50\u8c31\u85cf\u5728\u4e00\u53ea\u7cbe\u5de7\u7684\u9ec4\u94dc\u7bb1\u5b50\u91cc\uff0c\u53c8\u88ab\u4eba\u53d1\u73b0\uff0c\u6743\u5f53\u505a\u51ac\u65e5\u53d6\u6696\u7684\u5668\u5177\u3001\u5305\u88f9\u793c\u7269\u7684\u5ec9\u4ef7\u7eb8\u5f20\u3002\u5176\u4e2d\u6709\u4e00\u5f20\u7528\u91d1\u7c89\u58a8\u6c34\u5199\u5c31\uff0c\u7f72\u540d\u201c\u963f\u5c14\u5f17\u96f7\u5fb7\u00b7\u8def\u5fb7\u7ef4\u5e0c\u00b7\u8d1d\u4ec0\u7c73\u7279\u00b7\u743c\u65af\u201d\uff0c\u9898\u4e3a\u201c\u53cc\u4eba\u7235\u58eb\u66f2\u7b2c\u4e00\u53f7\uff0c\u2018\u738b\u4e0e\u540e\u2019\u201d\uff0c\u5f20\u72c2\u968f\u610f\u7684\u4f5c\u66f2\u5bb6\u5728\u4e0a\u9762\u6ca1\u6e85\u4e0a\u5206\u6beb\u58a8\u70b9\u3001\u7cbe\u7ec6\u5730\u5206\u6210\u4e24\u6bb5\uff0c\u88c1\u6210\u4e24\u5f20\u7eb8\uff0c\u6070\u597d\u6bd4\u4fe1\u5c01\u5c0f\u4e9b\u3002\u623f\u5ba2\uff08\u4e00\u5bf9\u65b0\u5a5a\u592b\u59bb\uff09\u5c06\u4ed6\u7684\u60ca\u4e16\u4e4b\u4f5c\u6254\u5230\u95e8\u5916\uff0c\u4efb\u51ed\u8bb8\u591a\u53ea\u672a\u5f00\u5316\u7684\u624b\uff0c\u8bb8\u591a\u53ea\u4e0d\u5f39\u94a2\u7434\u3001\u4e0d\u62c9\u5c0f\u63d0\u7434\u7684\u624b\u5c06\u8fd9\u6bb5\u65cb\u5f8b\u63c9\u76b1\u3001\u5c55\u5f00\u3001\u626f\u788e\uff0c\u78e8\u635f\u3002\u8def\u5fb7\u7ef4\u5e0c\u7684\u56fe\u7eb8\uff0c\u4ed6\u5e26\u5728\u8eab\u4e0a\uff0c\u88ab\u4eba\u7a83\u8d70\uff0c\u6700\u7ec8\u6563\u843d\u4e8e\u4e0d\u77e5\u540d\u7684\u5386\u53f2\u6e4d\u6d41\u4e2d\u3002\n\n\u4ed6\u4eec\u518d\u6ca1\u89c1\u9762\u3002\n\n\u6b63\u5982\u90a3\u662f\u55a7\u56a3\u8352\u8bde\u3001\u5f20\u72c2\u8086\u610f\u7684\u5e74\u4ee3\uff0c\u4eba\uff0c\u65e0\u77e5\u65e0\u754f\uff0c\u4e0d\u80fd\u529b\u633d\u72c2\u6f9c\uff0c\u5728\u9686\u9686\u9a76\u6765\u7684\u6218\u4e89\u5217\u8f66\u9762\u524d\uff0c\u53ea\u5f97\u5351\u8eac\u5c48\u819d\u3001\u4f4e\u58f0\u4e0b\u6c14\u3002\u4f46\u81f3\u5c11\uff0c\u4ed6\u4eec\u53ef\u4ee5\u6bc1\u6389\u5bf9\u53e6\u4e00\u4e2a\u4eba\u800c\u8a00\u6781\u5176\u73cd\u8d35\u7684\u597d\u4e1c\u897f\u3002|\u7fbd\u6bdb\u5b50\u5f39}}"}}}