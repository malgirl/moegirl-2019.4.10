50]]\u53d1\u884c\u7684\u4e00\u6b3e\u52a8\u4f5c\u5192\u9669\u7c7b\u6e38\u620f\uff0c\u4e8e2016\u5e7412\u67086\u65e5\u767b\u9646PlayStation 4\u5e73\u53f0\uff0c\u4e9a\u6d32\u7e41\u4f53\u4e2d\u6587\u7248\u540c\u6b65\u53d1\u552e\uff0c\u5927\u9646\u7b80\u4f53\u4e2d\u6587\u72482017\u5e741\u670819\u65e5\u53d1\u552e\u3002\n\n== \u7b80\u4ecb ==\n\u672c\u4f5c\u7684\u5f00\u53d1\u5de5\u4f5c\u6700\u5f00\u59cb\u7531[[TEAM ICO]]\u62c5\u5f53\uff0c\u4e8e2007\u5e74\u542f\u52a8\uff0c\u4ee3\u53f7Project Trico\uff0c[[\u7535\u5b50\u5a31\u4e50\u5c55|E3 2009]]\u6b63\u5f0f\u516c\u5f00\uff0c\u539f\u5b9a\u4e8e2011\u5e74\u51ac\u53d1\u552e\uff0c2011\u5e744\u6708\u5ba3\u5e03\u5ef6\u671f\u3002\n\n\u6e38\u620f\u7684\u5f00\u53d1\u8fdb\u5ea6\u6bd4\u8f83\u7f13\u6162\uff0c\u6e38\u620f\u5728PS3\u4e0a\u59cb\u7ec8\u65e0\u6cd5\u8fbe\u5230\u4e0a\u7530\u6587\u4eba\u6240\u671f\u671b\u5c55\u73b0\u7684\u6982\u5ff5\u548c\u98ce\u683c\uff0c\u6e38\u620f\u7684\u8fd0\u884c\u901f\u7387\u4e5f\u5341\u5206\u4e0d\u7406\u60f3\u3002\n\n\u4e0a\u7530\u6587\u4eba\u4e8e2011\u5e74\u79bb\u5f00\u7d22\u5c3c\uff0cICO\u5c0f\u7ec4\u7684\u8bb8\u591a\u5176\u4ed6\u6210\u5458\u4e5f\u5728\u968f\u540e\u79bb\u804c\uff0c\u5f00\u53d1\u5de5\u4f5c\u4ea4\u7531\u7d22\u5c3c\u65e5\u672c\u5de5\u4f5c\u5ba4[[JAPAN Studio]]\uff0c\n\n\u5409\u7530\u4fee\u5e73\u57282011\u5e74\u65f6\u5c06\u6e38\u620f\u4ee3\u7801\u4ea4\u4e8e\u5305\u62ec[[\u5723\u83ab\u59ae\u5361\u5de5\u4f5c\u5ba4]]\u5728\u5185\u7684\u7d22\u5c3c\u5168\u7403\u5de5\u4f5c\u5ba4\u6210\u5458\uff0c\u4ee5\u8bd5\u56fe\u6539\u5584\u6e38\u620f\u8868\u73b0\uff0c\u4f46\u672a\u80fd\u5982\u613f\u3002\n\n2012\u5e74\uff0c\u968f\u7740\u7d22\u5c3c\u542f\u52a8\u4e86PS4\u7684\u5ba3\u4f20\u51c6\u5907\u5de5\u4f5c\uff0c\u7d22\u5c3c\u51b3\u5b9a\u5c06\u6e38\u620f\u5e73\u53f0\u6539\u6362\u4e3aPS4\uff0c\u4ee5\u4f7f\u5f97\u4e0a\u7530\u6587\u4eba\u7684\u4e00\u4e9b\u60f3\u6cd5\u80fd\u591f\u5728\u6e38\u620f\u4e2d\u5b8c\u5168\u5c55\u73b0\uff0c\u6e38\u620f\u7531\u591a\u4e2a\u7d22\u5c3c\u5168\u7403\u5de5\u4f5c\u5ba4\u6210\u5458\u53c2\u4e0e\u79fb\u690d\uff0cPS4\u67b6\u6784\u5e08Mark Cerny\u4e5f\u53c2\u4e0e\u4e86\u5de5\u4f5c\uff0c\u7ecf\u8fc7\u79fb\u690d\u540e\u7684\u6e38\u620f\u5f15\u64ce\u4e5f\u7ec8\u4e8e\u80fd\u591f\u5168\u901f\u8fd0\u8f6c\u3002\n\n2014\u5e74\uff0c\u4e0a\u7530\u6587\u4eba\u4e0e\u539fICO\u5c0f\u7ec4\u90e8\u5206\u6210\u5458\u6210\u7acb\u65b0\u5de5\u4f5c\u5ba4genDESIGN\uff0c\u4ecd\u7136\u5ef6\u7eed\u7740\u4e0e\u7d22\u5c3c\u7684\u5408\u4f5c\uff0c\u4eceJAPAN Studio\u91cd\u65b0\u63a5\u624b\u4e86\u6e38\u620f\u7684\u5f00\u53d1\u5de5\u4f5c\u4ee5\u5b8c\u6210\u6e38\u620f\uff0cJAPAN Studio\u4f9d\u7136\u8fdb\u884c\u534f\u540c\u5f00\u53d1\u3002\n\n\u57282011\u5e74\u52302015\u5e74\u95f4\uff0c\u51e0\u4e4e\u6bcf\u5e74\u90fd\u4f1a\u6709\u4e00\u4e24\u6b21\u6e38\u620f\u88ab\u53d6\u6d88\u7684\u4f20\u95fb\u51fa\u73b0\uff0c\u5c24\u5176\u5728\u4e0a\u7530\u6587\u4eba\u79bb\u5f00\u7d22\u5c3c\u4e0e\u7d22\u5c3c\u5fd8\u8bb0\u7eed\u671f\u6700\u540e\u7684\u5b88\u62a4\u8005\u5546\u6807\u8fd9\u4e24\u4e2a\u65f6\u95f4\u70b9\u4e4b\u540e\uff0c\u4f46\u5409\u7530\u4fee\u5e73\u6bcf\u6b21\u90fd\u4f1a\u5728\u6570\u65e5\u540e\u4e8e\u4e2a\u4eba\u63a8\u7279\u4e88\u4ee5\u5426\u8ba4\u3002\n\n\u6e38\u620f\u4e8eE3 2015\u518d\u6b21\u516c\u5f00\uff0c\u5e76\u5ba3\u5e03\u4e8e2016\u5e74\u51ac\u767b\u9646PS4\u3002\n\n\u5409\u7530\u4fee\u5e73\u8868\u793a\u6e38\u620f\u7684\u5f00\u53d1\u8fdb\u7a0b\u5728\u7a33\u6b65\u8fdb\u884c\uff0cE3 2015\u518d\u6b21\u516c\u5f00\u4ee5\u6765\u6ca1\u6709\u91ca\u51fa\u66f4\u591a\u7684\u4fe1\u606f\u662f\u4e3a\u4e86\u9632\u6b62\u5267\u900f\u3002\n\n\u4e0a\u7530\u6587\u4eba\u66fe\u6307\u51fa\u672c\u4f5c\u5c06\u4f1a\u662f\u4e00\u4e2a\u5f00\u653e\u5f0f\u7ed3\u5c40\u3002\n\n\u6e38\u620f\u5728E3 2016\u7ec8\u4e8e\u6b63\u5f0f\u5ba3\u5e03\u53d1\u552e\u65e5\u4e3a10\u670825\u65e5\uff0c\u4f46\u4e8e9\u670812\u65e5\u518d\u5ea6\u5ba3\u5e03\u5ef6\u671f\u81f312\u67086\u65e5\u3002\n\n\u6e38\u620f\u5728CJ 2016\u4e0a\u5ba3\u5e03\u8fdb\u5165\u4e2d\u56fd\u5927\u9646\u5e02\u573a\uff0c\u5e76\u5728UCG 2016\u540e\u5ba3\u5e03\u53d1\u552e\u65e5\u4e3a1\u670819\u65e5\u3002\n\n== \u5267\u60c5\u7b80\u4ecb ==\n\u672c\u4f5c\u7684\u4e3b\u9898\u662f\u201c\u7f6a\u4e0e\u7f5a\u201d\u3002\n\n\u5c11\u5e74\u81ea\u6c89\u7761\u4e2d\u82cf\u9192\uff0c\u4ed6\u53d1\u73b0\u4e0d\u81ea\u5df1\u8eab\u5904\u4e0d\u77e5\u4f55\u5904\u7684\u8c37\u5e95\uff0c\u800c\u8eab\u8fb9\uff0c\u5219\u8eba\u7740\u4e00\u53ea\u8eab\u53d7\u91cd\u4f24\u3001\u7fc5\u8180\u6298\u65ad\u3001\u6ee1\u8eab\u75ae\u75cd\u4e14\u88ab\u56da\u7981\u7684\u98df\u4eba\u7684\u5927\u9e6b\u3002\n\n\u5728\u8fd9\u5ea7\u5947\u7279\u7684\u795e\u79d8\u9057\u8ff9--\u4f20\u8bf4\u4e2d\u7684\u5927\u9e6b\u5de2\u4e2d\uff0c\u5c11\u5e74\u4e0e\u540d\u4e3aTRICO\u7684\u5de8\u5927\u751f\u7269\u7ed3\u4e0b\u4e86\u4e0d\u89e3\u4e4b\u7f18\u3002\n\n\u8fd9\u5bf9\u770b\u4f3c\u4e0d\u76f8\u79f0\u7684\u7ec4\u5408\u6162\u6162\u7f14\u7ed3\u4fe1\u4efb\u5e76\u5f7c\u6b64\u4f9d\u9760\uff0c\u4e00\u540c\u8d8a\u8fc7\u591a\u5904\u9ad8\u8038\u83ab\u6d4b\u4e14\u5145\u6ee1\u672a\u77e5\u5371\u9669\u7684\u9057\u8ff9\uff0c\u4e00\u8d77\u89e3\u5f00\u9690\u85cf\u5728\u5c9b\u5c7f\u80cc\u540e\u7684\u53e4\u6587\u660e\u4e4b\u8c1c\uff0c\u5e76\u81ea\u4e0d\u65ad\u88ad\u6765\u7684\u5371\u673a\u4e2d\u9003\u751f\u3002\n\n== \u6e38\u620f\u7cfb\u7edf ==\n\u6e38\u620f\u7684\u4e3b\u65e8\u662f\u64cd\u63a7\u7537\u5b69\uff0c\u5bfb\u627e\u9053\u8def\u3001\u89e3\u5f00\u8ff7\u9898\u5e76\u547c\u5524\u3001\u5bfb\u6c42\u5927\u9e6b\u7684\u5408\u4f5c\uff0c\u4e00\u540c\u81ea\u5404\u79cd\u56f0\u5883\u4e0e\u9669\u5883\u7684\u9003\u751f\u3002\u6e38\u620f\u6d41\u7a0b\u4e2d\u4e5f\u5305\u542b\u8bb8\u591a\u6218\u6597\uff0c\u5927\u90e8\u5206\u6218\u6597\u9700\u8981\u73a9\u5bb6\u914d\u5408\uff0c\u6253\u5f00\u673a\u5173\u548c\u89e3\u9664\u654c\u4eba\u7684\u6b66\u88c5\uff0c\u4ee5\u5e2e\u52a9\u5927\u9e6b\u6210\u529f\u8fdb\u5165\u6218\u6597\u72b6\u6001\u3002\u53e6\u6709\u4e00\u90e8\u5206\u6218\u6597\u5219\u9700\u8981\u73a9\u5bb6\u914d\u5408\uff0c\u5229\u7528\u6709\u9650\u7684\u624b\u6bb5\u5e2e\u52a9\u5360\u4e0b\u98ce\u7684\u5927\u9e6b\u751f\u8fd8\u3002\n\n\u5927\u9e6b\u4f5c\u4e3a\u4e00\u4e2a\u72ec\u7acb\u7684\u601d\u7ef4\u4e2a\u4f53\uff0c\u540c\u65f6\u5728\u4e0d\u80fd\u542c\u61c2\u4eba\u7c7b\u6307\u4ee4\u7684\u60c5\u51b5\u4e0b\uff0c\u4e0d\u4e00\u5b9a\u80fd\u591f\u4e00\u6b21\u6027\u6ee1\u8db3\u73a9\u5bb6\u7684\u9700\u8981\uff0c\u4e5f\u6709\u53ef\u80fd\u6c89\u8ff7\u6d17\u6fa1\u3001\u770b\u98ce\u666f\u3002\u4f46\u968f\u7740\u6e38\u620f\u8fdb\u5ea6\u7684\u63a8\u8fdb\uff0c\u5927\u9e6b\u4e0e\u73a9\u5bb6\u7684\u5408\u4f5c\u5c06\u8d8a\u6765\u8d8a\u987a\u7545\u3002\n\n{{PS4\u5e73\u53f02016\u5e74\u6e38\u620f}}\n== \u5916\u90e8\u94fe\u63a5\u4e0e\u6ce8\u91ca ==\n\u5b98\u65b9\u7f51\u7ad9{{ja}}\uff1ahttp://www.jp.playstation.com/scej/title/trico/\n\n[[\u5206\u7c7b:\u6700\u540e\u7684\u5b88\u62a4\u8005]][[\u5206\u7c7b:\u65e5\u672c\u6e38\u620f\u4f5c\u54c1]]\n[[\u5206\u7c7b:TEAM ICO\u4f5c\u54c1]][[\u5206\u7c7b:genDESIGN\u4f5c\u54c1]][[\u5206\u7c7b:JAPAN Studio\u4f5c\u54c1]]\n[[\u5206\u7c7b:\u5192\u9669\u9898\u6750]]\n[[Category:PlayStation 4\u6e38\u620f]]"}}}